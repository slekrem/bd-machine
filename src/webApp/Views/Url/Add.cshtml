@model bd.machine.webApp.ViewModels.Url.UrlAddViewModel
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">URL hinzufügen</h3>
			</div>
			<div class="panel-body">
				@using(Html.BeginForm("Add", "Url", FormMethod.Post)) {
				@Html.AntiForgeryToken()
				<div class="form-group">
					@Html.LabelFor(x => x.Url)
					@Html.TextBoxFor(x => x.Url, new { @class="form-control" })
				</div>
				<button type="submit" class="btn btn-default">Hinzufügen</button>
				}
			</div>
		</div>
	</div>
</div>